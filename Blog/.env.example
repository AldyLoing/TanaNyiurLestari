# Django Configuration
# Generate a new SECRET_KEY for production: https://djecrety.ir/
SECRET_KEY=your-secret-key-here-replace-with-actual-secret

# Debug mode (NEVER set to True in production)
DEBUG=True

# Allowed hosts (comma-separated, no spaces)
# Example: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# SQLite (Development)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (Production) - Uncomment and configure for production
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Google Maps API
# Get your API key from: https://console.cloud.google.com/
# Remember to set restrictions on the API key!
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-app-password

# Security Settings
# For production, set SECURE_SSL_REDIRECT=True
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Static and Media Files
STATIC_URL=/static/
MEDIA_URL=/media/
